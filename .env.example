# Scholar AI Environment Variables Template
# Copy this file to .env and fill in your actual values

# ================================
# SUPABASE CONFIGURATION (REQUIRED)
# ================================
VITE_SUPABASE_URL=https://xicjnnzzykdhbmrpafhs.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# ================================
# STRIPE CONFIGURATION (REQUIRED)
# ================================
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
VITE_STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Price IDs (Create these in your Stripe Dashboard)
VITE_STRIPE_PRICE_ADVANCED_MONTHLY=price_advanced_ai_monthly
VITE_STRIPE_PRICE_ADVANCED_YEARLY=price_advanced_ai_yearly
VITE_STRIPE_PRICE_ULTRA_MONTHLY=price_ultra_intelligent_monthly
VITE_STRIPE_PRICE_ULTRA_YEARLY=price_ultra_intelligent_yearly
VITE_STRIPE_PRICE_PHD_MONTHLY=price_phd_level_monthly
VITE_STRIPE_PRICE_PHD_YEARLY=price_phd_level_yearly

# ================================
# FUTUREHOUSE API (REQUIRED)
# ================================
VITE_FUTUREHOUSE_API_KEY=your-futurehouse-api-key-here

# ================================
# OPENAI API (SERVER-SIDE ONLY)
# ================================
# ⚠️ CRITICAL: Never use VITE_ prefix for OpenAI API key!
# This key should ONLY be accessible server-side in Supabase Edge Functions
OPENAI_API_KEY=sk-your-openai-api-key-here

# ================================
# ANALYTICS (OPTIONAL)
# ================================
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_SENTRY_DSN=https://your-sentry-dsn
VITE_HOTJAR_ID=your-hotjar-id

# ================================
# DEVELOPMENT SETTINGS
# ================================
NODE_ENV=development
VITE_APP_ENV=development

# ================================
# PRODUCTION SETTINGS (For deployment)
# ================================
# NODE_ENV=production
# VITE_APP_ENV=production

# ================================
# SECURITY SETTINGS
# ================================
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# ================================
# FEATURE FLAGS
# ================================
VITE_ENABLE_COLLABORATION=true
VITE_ENABLE_REAL_TIME_SYNC=true
VITE_ENABLE_ADVANCED_ANALYTICS=true
VITE_ENABLE_API_ACCESS=true
VITE_ENABLE_WHITE_LABEL=true
VITE_ENABLE_SSO_INTEGRATION=true
VITE_ENABLE_GDPR_TOOLS=true

# ================================
# DEPLOYMENT SETTINGS
# ================================
VERCEL_URL=your-vercel-deployment-url
DOMAIN=scholarai.eu
SUBDOMAIN=app

# ================================
# EMAIL SETTINGS (Future)
# ================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# ================================
# RATE LIMITING
# ================================
VITE_API_RATE_LIMIT=100
VITE_AUTH_RATE_LIMIT=5
VITE_RESEARCH_RATE_LIMIT=10

# ================================
# CORS SETTINGS
# ================================
VITE_CORS_ORIGINS=https://www.scholarai.eu,https://scholarai.eu

# ================================
# SESSION SETTINGS
# ================================
VITE_SESSION_TIMEOUT=86400000
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_LOCKOUT_DURATION=900000

# ================================
# STORAGE SETTINGS
# ================================
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,txt,md

# ================================
# BACKUP SETTINGS
# ================================
VITE_ENABLE_AUTO_BACKUP=true
VITE_BACKUP_INTERVAL=86400000

# ================================
# MONITORING
# ================================
VITE_HEALTH_CHECK_INTERVAL=300000
VITE_ERROR_THRESHOLD=10
VITE_PERFORMANCE_THRESHOLD=5000
